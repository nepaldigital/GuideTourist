<h1>Listing descriptions</h1>

<table border="2">
  <thead>
    <tr>
      <th>Description</th>
      <th>Description Count</th>
      <th>Add Image</th>
      <th colspan="3"></th>
      <th>view images</th>
    </tr>
  </thead>

  <tbody>
    <% @descriptions.each do |description| %>
      <tr>
        <td><%= description.description %></td>
        <td><%= description.images.count %></td>
        <td><%= link_to "Add new", description_image_new_path(description)  %></td>
        <td><%= link_to 'Show', description %></td>
        <td><%= link_to 'Edit', edit_description_path(description) %></td>
        <td><%= link_to 'Destroy', description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'view images', description_image_show_path(description) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

